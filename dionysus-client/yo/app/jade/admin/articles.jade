script#admin-article-tpl(type="text/template")
  .image
    img(src="/public/images/placeholder.png")
  .content
    a.ui.header(href!="/admin/articles/<%= id %>/edit") 
      i.edit.icon
      | <%= title %>
    p.description <%= summary %>

script#admin-articles-tpl(type="text/template")
  a.ui.button.edit.blue(href="/admin/articles/create") 
    i.add.icon
    | Create
  ul.ui.relaxed.items

script#admin-article-detail-tpl(type="text/template")
  h4 <%=title%>
  p <%= summary%>
  p <%= body %>

script#admin-article-detail-edit-tpl(type="text/template")
  h4.ui.dividing.header Article Editing
  .two.fields
    .field
      label Title
      input(name="title", type="text", value!="<%= title %>", placeholder="Title") 
    .field
      label Category
      select.ui.dropdown(name="category")
        option(value="") Choose you category
  .field
    label Summary
    textarea(name="summary") <%= summary %>
  .field
    label Body
    textarea.editor(name="body") <%= body %>
  .ui.button.submit
    i.save.icon
    | Save

script#admin-article-create-tpl(type="text/template")
  h4.ui.dividing.header Article Creating
  .two.fields
    .field
      label Title
      input(type="text", name="title", placeholder="Title") 
    .field
      label Category
      select.ui.dropdown(name="category")
        option(value="") Choose you category
  .field
    label Summary
    textarea#summary
  .field
    label Body
    textarea#body.editor
  .ui.button.submit.blue
    | Create