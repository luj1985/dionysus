script#admin-course-editor-tpl(type="text/template")
  form.ui.form
    fields
      .six.wide.field
        label 课程名称
        input(name="name", type="text", placeholder="课程名称")
      .six.wide.field
        label 课程内容分类
        select#category.ui.dropdown
          option(value="") 选择课程类别
          | <% _.each(categories, function(category) { %>
          | <option value="<%= category.link %>"><%= category.name %></option>
          | <% }) %>

      .six.wide.field
        label 上课时间
          input(name="time", id= "courseTime", type="text", placeholder="时间")
      .six.wide.field
        label 上课地点
        input(name="address", type="text", placeholder="地址")
      .six.wide.field
        label 讲师
        select#consultant.ui.dropdown
          option(value="") 选择讲师
          | <% _.each(consultants, function(consultant) { %>
          | <option value="<%= consultant.link %>"><%= consultant.username %></option>
          | <% }) %>

      .six.wide.field
        label 人数限制
        input(name="capacity", type="text", placeholder="人数")
      .six.wide.field
        label 视频链接
        input(name="video", type="text", placeholder="视频链接")
      .six.wide.field
        label 课程简介
        textarea(name="description")

      .ui.button.submit
        i.save.icon
        | 保存
