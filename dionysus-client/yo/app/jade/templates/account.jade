script#account-login-tpl(type="text/template")
  h4.ui.dividing.header Login
  .field
    label Username
    input(type="text", placeholder="Username")
  .field
    label Password
    input(type="password", placeholder="Password")
  .field
    span
      | Do not have account 
      a(href="/app/register") register
