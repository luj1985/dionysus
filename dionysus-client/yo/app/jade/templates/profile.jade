script#profile-layout-tpl(type="text/template")
  h2.ui.header
    img.ui.small.circular.image(src!="<%= avatar%>")
    .content 你好，<%= username %>
      .sub.header <%= about %>
      .sub.header 
        a#update(href="#") 修改我的个人信息
  h4.ui.horizontal.header.divider
    i.bar.char.icon
  .ui.page.grid
    .four.wide.left.aligned.column
      .ui.list
        a#myarticles.item
          i.small.circular.book.icon
          |我的文章
        a#myappointments.item
          i.small.circular.chat.icon
          |我的一对一咨询
        a#mycourses.item
          i.small.circular.users.icon 
          |我的课程
        a#mytests.item
          i.small.circular.question.icon 
          |我的测试
    .twelve.wide.column
      .ui.stacked.segment
        div#mycontent

