doctype html
html(class="no-js")
  head
    meta(charset="utf-8")
    meta(name="description",  content="")
    meta(name="viewport",     content="width=device-width")
    meta(http-equiv="X-UA-Compatible", content="IE=edge;")
    link(rel="shortcut icon", href="/favicon.ico")

    // build:css({.,.tmp}) /styles/adminlogin.css
    link(rel="stylesheet", href="/styles/semantic.css")
    // endbuild
  body.dionysus
    main#main(style="width:80%")
      .ui.centered.grid
        .row
          .column
            img.ui.centered.image(src="/public/images/logo.png")
        .row
          .eight.wide.column
            .ui.basic.segment
              h3.ui.center.aligned.header
                i.settings.icon
                |管理系统 v1.0
        .row
          .eight.wide.column
            .ui.raised.segment 
              form.ui.form
                .field
                  label 用户名
                  .ui.left.icon.input
                    input#name(type="text", name="username", placeholder="请输入用户名")
                    i.user.icon
                .field
                  label 密码    
                  .ui.left.icon.input
                    input#pass(type="password", name="password", placeholder="请输入密码")
                    i.lock.icon
                .ui.primary.button#loginbutton(value="登陆") 登录

  include ./jade/_library

  // build:js({app,.tmp}) /scripts/admin/loginapp.js
  script(src="/scripts/admin/adminlogin.js")
  // endbuild

