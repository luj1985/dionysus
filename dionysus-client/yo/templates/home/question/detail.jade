#detail.question
  .ui.centered.grid
    .eight.wide.column
      .basic.ui.segment
        .ui.header
          h2 {{title}}
        .meta
          span#from 来自：{{author.username}}
          span#number 回答：{{numberOfAnswers}}
        p.description {{description}}
        .ui.divider(style="margin-top:50px;")
        #comments
          h3
            a 我来回答
          .ui.form
            textarea#answer
            .ui.medium.green.button#submit 提交答案
          #anwsers(style="clear:both;margin-top:100px;")
            .ui.comments
              |{{#each answers}}
              .comment
                a.avatar
                  |{{#if createdBy.avatar}}
                  img(src="{{createdBy.avatar}}")
                  |{{else}}
                  img(src="/public/images/placeholder.png")
                  |{{/if}}
                .content
                  a.author {{createdBy.username}}
                  .metadata {{createdDate.year}}-{{createdDate.monthOfYear}}-{{createdDate.dayOfMonth}}
                  .text
                    p {{content}}
              |{{/each}}
