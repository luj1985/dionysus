#detail.question
  .ui.centered.grid
    .eight.wide.column
      .basic.ui.segment
        .ui.header
          h2 {{title}}
        .meta
          span 来自：{{author.username}}
          span 回答：{{numberOfAnswers}}
        p.description {{description}}
        .ui.divider(style="margin-top:50px;")
        #comments
          h3
            a 我来回答
          .ui.form
            textarea#answer
            .ui.medium.submit.green.button 提交答案
          #anwsers
            .ui.comments
              |{{#each comments}}
              .comment
                a.avatar
                  |{{#if createdBy.avatar}}
                  img(src="{{createdBy.avatar}}")
                  |{{else}}
                  img(src="/public/images/placeholder.png")
                  |{{/if}}
                .content
                  a.author {{createdBy.username}}
                  .metadata {{lastModifiedDate.year}}-{{lastModifiedDate.monthOfYear}}-{{lastModifiedDate.dayOfMonth}}
                  .text
                    p {{comment}}
              |{{/each}}
