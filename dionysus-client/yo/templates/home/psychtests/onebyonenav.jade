h5 第{{ current }}题，一共{{ total }}题
{{#if hasPrev}}
a.ui.primary.button(href="/psychtests/{{question}}/{{prev}}")
  i.icon.chevron.left
  | 上一题
{{else}}
.ui.primary.button.disabled 
  i.icon.chevron.left
  | 上一题
{{/if}}



{{#if hasNext}}
a.ui.primary.button(href="/psychtests/{{question}}/{{next}}") 
  | 下一题
  i.icon.chevron.right
{{else}}
.ui.primary.button.disabled 
  | 下一题
  i.icon.chevron.right
{{/if}}

{{#if canUpdate}}
button.ui.primary.button.save
  i.icon.save 
  | 保存
{{else}}
button.ui.primary.disabled.button
  i.icon.save 
  | 保存
{{/if}}


{{#if hasNext}}

button.ui.primary.disabled.button(type="submit")
  i.icon.send 
  | 提交答案
{{else}}
button.ui.primary.button.submit(type="submit")
  i.icon.send
  | 提交答案
{{/if}}