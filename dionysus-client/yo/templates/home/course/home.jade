#fullPage.course
  #first.section
    .ui.grid
      .slider.row.centered
        .twelve.wide.column
          #slider.flexslider
            ul.slides
              |{{#each slider}}
              li
                a(href="/courses/{{id}}")
                  |<img src="{{cover}}">
              |{{/each}}
      .category.row.centered
        .twelve.wide.column
          #topCats
            label 受众人群
            |{{#each top}}
            .top.ui.small.basic.button(id="{{id}}") {{name}}
            |{{/each}}
          #subCats
            label 内容类别
            |{{#each sub}}
            .sub.ui.small.basic.button(id="{{id}}") {{name}}
            |{{/each}}
          #approach
            label 授课方式
            |{{#each approach}}
            a.approach.ui.small.basic.button(href="{{href}}") {{name}}
            |{{/each}}
      .twelve.wide.column.centered
        .ui.divider
      #videos.twelve.wide.column.centered
        .ui.three.column.grid
          |{{#each videos}}
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="{{cover}}")
              .course.title.link
                h4
                  a.title(href="/courses/{{id}}") {{title}}
          |{{/each}}
      .two.column.centered.row
        .centered.column
          #pagenation-video.pagenation
      .twelve.wide.column.centered
        .ui.divider
  #second.section
    .ui.grid
      .twelve.wide.column.centered
        img.ui.fluid.image(src="/public/images/room-course-reporter.png")
        h1.reporter.title "还想要点别的？"
      #room.twelve.wide.column.centered
        .ui.four.column.grid
          |{{#each room}}
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="/static/img/1.jpg")
              .course.title.link
                h5
                  a.title(href="/courses/{{id}}") {{title}}
              p.course.content {{description}}
              .reg(style="text-align:center;padding-top:20px;")
                a.ui.purple.tiny.basic.button(href="/courses/{{id}}/reg") 加 入
          |{{/each}}
      .two.column.centered.row
        .centered.column
          #pagenation-room.pagenation
      .twelve.wide.centered.column
        .ui.divider
      #offline.twelve.wide.centered.column
        .ui.two.column.grid
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="/public/images/offline-course.png")
          .column
            .ui.basic.segment
              .ui.grid
                |{{#each offline}}
                .three.column.row
                  .ten.wide.column
                    h5
                      a.title(href="/courses/{{id}}") {{title}}
                    .offline.meta
                      label 开课时间 {{date}}
                      label 已注册 {{registered}} 人
                  .column
                    a.ui.basic.tiny.purple.button(href="/courses/{{id}}/reg") 加 入
                |{{/each}}

