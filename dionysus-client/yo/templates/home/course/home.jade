#fullPage.course
  #first.section
    .ui.grid
      .slider.row.centered
        .twelve.wide.column
          #slider.flexslider
            ul.slides
              |{{#each slider}}
              li
                a(href="/courses/{{id}}")
                  |<img src="/public/images/slidex.jpg">
              |{{/each}}
      .category.row.centered
        .twelve.wide.column
          #topCats
            a(style="margin-right:20px;") 受众人群
            |{{#each top}}
            .top.ui.small.basic.button(id="{{id}}") {{name}}
            |{{/each}}
          #subCats(style="margin-top:10px;")
            a(style="margin-right:20px;") 内容类别
            |{{#each sub}}
            .sub.ui.small.basic.button(id="{{id}}") {{name}}
            |{{/each}}
          #approach(style="margin-top:10px;")
            a(style="margin-right:20px;") 授课方式
            |{{#each approach}}
            a.approach.ui.small.basic.button(href="{{href}}") {{name}}
            |{{/each}}
      .twelve.wide.column.centered
        .ui.divider
      #videos.twelve.wide.column.centered(style="margin-top:10px;")
        .ui.three.column.grid
          |{{#each videos}}
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="/static/img/1.jpg")
              .course.title.link(style="text-align:center;padding-top:20px;")
                h4
                  a(href="/courses/{{id}}") {{title}}
          |{{/each}}
      .two.column.centered.row
        .centered.column
          #pagenation-video(style="text-align:center;")
      .twelve.wide.column.centered
        .ui.divider
  #second.section
    .ui.grid
      .twelve.wide.column.centered
        img.ui.fluid.image(src="/public/images/room-course-reporter.png")
      #room.twelve.wide.column.centered
        h1(style="text-align:center;margin-top:30px;margin-bottom:20px;font-weight:bold;") "还想要点别的？"
        .ui.four.column.grid
          |{{#each room}}
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="/static/img/1.jpg")
              .course.title.link(style="text-align:center;padding-top:20px;")
                h5
                  a(href="/courses/{{id}}") {{title}}
              p.room.course.content(style="padding-top:20px;") {{description}}
              .reg(style="text-align:center;padding-top:20px;")
                a.ui.purple.tiny.basic.button(href="/courses/{{id}}/reg") 加入
          |{{/each}}
      .two.column.centered.row
        .centered.column
          #pagenation-room(style="text-align:center;")
      .twelve.wide.centered.column
        .ui.divider
      #offline.twelve.wide.centered.column
        .ui.two.column.grid
          .column
            .ui.basic.segment
              img.ui.fluid.image(src="/public/images/slidex.jpg")
          .column
            .ui.basic.segment
              .ui.grid
                |{{#each offline}}
                .two.column.row
                  .column
                    a(href="/courses/{{id}}") {{title}}
                    p {{description}}
                  .column
                    a.ui.basic.tiny.purple.button 加入
                |{{/each}}

