      <version>2.1.3</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>backbonejs</artifactId>
      <version>1.1.2-4</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
      <artifactId>backbone-relational</artifactId>
      <version>0.8.8</version>
    </dependency>
    <dependency>
      <groupId>org.webjars</groupId>
